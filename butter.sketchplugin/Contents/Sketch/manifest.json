{
  "name": "Butter",
  "description": "Butts layers together",
  "author": "Peter Berrecloth & David Williames",
  "homepage": "https://github.com/pberrecloth/butter-sketch-plugin",
  "version": "2.0",
  "identifier": "com.butter.sketchplugin",
  "appcast": "https://raw.githubusercontent.com/pberrecloth/butter-sketch-plugin/master/.appcast.xml",
  "compatibleVersion": "39.1",
  "bundleVersion": 1,
  "commands": [
    {
      "name": "Butt Selection Up",
      "identifier": "buttSelectionUp",
      "description": "Butt selection up",
      "icon": "icons\/buttUp.png",
      "script": "main.js",
      "handler": "buttSelectionUp"
    },
    {
      "name": "Butt Selection Down",
      "identifier": "buttSelectionDown",
      "description": "Butt selection down",
      "icon": "icons\/buttDown.png",
      "script": "main.js",
      "handler": "buttSelectionDown"
    },
    {
      "name": "Butt Selection Left",
      "identifier": "buttSelectionLeft",
      "description": "Butt selection left",
      "icon": "icons\/buttLeft.png",
      "script": "main.js",
      "handler": "buttSelectionLeft"
    },
    {
      "name": "Butt Selection Right",
      "identifier": "buttSelectionRight",
      "description": "Butt selection right",
      "icon": "icons\/buttRight.png",
      "script": "main.js",
      "handler": "buttSelectionRight"
    },
    {
      "name": "Increment Selection spacing",
      "identifier": "increment",
      "description": "Increment selected layers by the defined interval spacing",
      "icon": "icons\/buttRight.png",
      "script": "main.js",
      "handler": "incrementSpacing"
    },
    {
      "name": "Decrement Selection spacing",
      "identifier": "decrement",
      "description": "Decrement selected layers by the defined interval spacing",
      "icon": "icons\/buttRight.png",
      "script": "main.js",
      "handler": "decrementSpacing"
    },
    {
      "name": "Snap Selection to interval",
      "identifier": "snap",
      "description": "Snap selected layers to the most likely interval",
      "icon": "icons\/buttRight.png",
      "script": "main.js",
      "handler": "snap",
      "shortcut": "control b"
    },
    {
      "name": "Settings",
      "identifier": "showSettings",
      "description": "Show Butter Settings",
      "icon": "icons\/settings.png",
      "script": "main.js",
      "handler": "showSettings"
    },
    {
      "script":"main.js",
      "handlers": {
        "actions": {
            "OpenDocument": "openDoc",
            "SelectionChanged.finish": "selectionChanged"
        }
      }
    }
  ],
  "menu": {
    "isRoot": true,
    "items": [
      {
        "title": "Butter 2",
        "items": [
          "buttSelectionUp",
          "buttSelectionDown",
          "buttSelectionLeft",
          "buttSelectionRight",
          "-",
          "increment",
          "decrement",
          "-",
          "snap",
          "showSettings"
        ]
      }
    ]
  }
}
